@model RaptorENEL_V._1._0.Models.Login
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Raptor Test</title>

    @Styles.Render("~/css/css")

    @Scripts.Render("~/bundles/jquery")

    <style type="text/css">
        body {
            background: url(../Images/loginbk.jpg) round no-repeat;
            padding: 0px !important;
            margin: 0px !important;
            width: 100%;
            height: 100%;
        }
    </style>

</head>
<body>
    @using (Html.BeginForm("Restore", "Login", FormMethod.Post, new { id = "restore_user_validate", name= "restore_user_validate", novalidate = "novalidate" }))
    {
        <div class="container">

            <div class="row">
                <div class="col-xs-3"><br /></div>
                <div class="col-xs-6 text-center" style="">
                    
                    <br />
                    <div class="col-lg-12 text-center" style="background: url(../Images/opacity.png) repeat; margin-bottom: 0;">
                        <h4 style="padding: 10px; margin-bottom: 0; color: #FFF;">Raptor</h4>
                    </div>
                    
                    <div class="col-lg-12 text-center" style="background: url(../Images/opacity2.png) repeat;">
                        
                        <br />
                        <div class="row">
                            <div class="col-md-12 text-center">
                                <img src="../Images/EnelLogo1v0.png" height="45" alt="Raptor Enel Logo" title="" />
                            </div>
                        </div>

                        <br /><br />

                        <div class="row">
                            <div class="col-md-2 text-center"></div>
                            <div class="col-md-8 text-center">
                                
                                <p style="color: #FFFFFF;">
                                    ¿Ha olvidado su clave? <br />
                                    Ingrese su dirección de correo electrónico <br />
                                    le enviaremos instrucciones para establecer su clave.
                                </p>

                            </div>
                            <div class="col-md-2 text-center"></div>
                        </div>

                        <br />
                        <div class="row">
                            <div class="col-md-2 text-center"></div>
                            <div class="col-md-8 text-center">
                                <div class="form-group">
                                    <div class="col-md-12 input-group secondary">
                                        <span class="input-group-addon">
                                            <span class="arrow"></span>
                                            <i class="fa fa-envelope" style="color: #555555 !important;"></i>
                                        </span>
                                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control text-center", name = "email", id = "email", placeholder = "Correo de usuario" } })
                                        
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2 text-center"></div>
                        </div>

                        <br />
                        <div class="row">
                            <div class="col-md-2 text-center"></div>
                            <div class="col-md-8 text-center">
                                <button type="submit" class="btn btn-info btn-icon" style="width: 100%;">
                                    <span><b>Restablecer Clave</b></span>
                                </button>
                            </div>
                            <div class="col-md-2 text-center"></div>
                        </div>

                        <br /><br />
                    </div>
                </div>
                <div class="col-xs-3"><br /></div>
            </div>

        </div>
    }
    
    @Scripts.Render("~/bundles/bootstrap")
        
</body>
</html>
